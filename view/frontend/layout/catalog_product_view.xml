<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- for simple products -->
        <referenceContainer name="product.info.form.content">
            <block class="Creditea\Magento2\Block\Catalog\Product\View" name="creditea.product.simple" template="Creditea_Magento2::block_product.phtml" before="product.info.addtocart"/>
        </referenceContainer>
        
        <!-- for config products -->
        <referenceBlock name="product.info.options.wrapper.bottom">
            <block class="Creditea\Magento2\Block\Catalog\Product\View" name="creditea.product.config" template="Creditea_Magento2::block_product.phtml" before="product.info.addtocart"/>
        </referenceBlock>
    </body>
</page>
